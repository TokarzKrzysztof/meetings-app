@using Meetings.EmailTemplates.Views;
@using Meetings.EmailTemplates.Views.Shared;
@model ResetPasswordModel;

@{
    ViewData["EmailTitle"] = "Witaj!";
    ViewData["EmailPreHeader"] = "Przyznanie nowego hasła do aplikacji";
}

@await Html.PartialAsync("CenteredText", "Otrzymaliśmy Twoją prośbę o reset hasła do naszej aplikacji.")
<br />
@await Html.PartialAsync("CenteredText", "Kliknij poniższy link aby przejść do ustanowienia nowego hasła")
<br />
@await Html.PartialAsync("EmailButton", new EmailButtonModel("Resetuj hasło", Model.ButtonUrl))
<br />
@await Html.PartialAsync("CenteredText", "Jeśli to nie Ty wysyłałeś/aś tą prośbę to możesz zignorować tego maila, Twoje hasło nie zostanie zmienione.")
